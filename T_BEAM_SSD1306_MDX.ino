void setup() {
  Serial.begin(9600);

  // SSD1306_SWITCHCAPVCC = display powered by 3.3V pin on T-BEAM
  if (!oled.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {  // use i2c scanner to find this address
    Serial.println(F("SSD1306 allocation failed"));
    for (;;)
      ;  // Don't proceed, loop forever
  }
  // Clear the buffer
  oled.clearDisplay();
}

void loop() {
  showBitmap();
  delay(2000);
  showText();
  delay(2000);
}

void showBitmap(void) {
  oled.clearDisplay();
  oled.drawBitmap(0, 0, logo, bitmap_height, bitmap_width, WHITE);
  oled.display();
}

void showText(void) {
  oled.clearDisplay();  // Clear the buffer
  oled.setTextSize(2);  // Draw 2X-scale text
  oled.setTextColor(SSD1306_WHITE);
  oled.setCursor(0, 0);
  oled.println(F("Middlesex"));
  oled.println(F("University"));
  oled.setTextSize(1);  // Draw 1X-scale text
  oled.println(F(""));
  oled.println(F("Dubai Knowledge Park"));
  oled.println(F("United Arab Emirates"));
  oled.display();
}
